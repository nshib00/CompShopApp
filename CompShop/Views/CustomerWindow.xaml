<Window x:Class="ComputerShop.Views.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local="clr-namespace:BLL.DTO;assembly=BLL"
        Title="Главное меню пользователя" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>

        <!-- Верхняя панель -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="60" Background="#F0F0F0">
            <TextBox Width="250" Margin="0,0,16,0"
                     materialDesign:HintAssist.Hint="Поиск по товарам"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <ComboBox Width="200"
                      materialDesign:HintAssist.Hint="Выберите категорию"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <ComboBoxItem>Все категории</ComboBoxItem>
                <ComboBoxItem>Категория 1</ComboBoxItem>
                <ComboBoxItem>Категория 2</ComboBoxItem>
            </ComboBox>
            <Button Content="Выйти" Width="80"
                    Click="LoginLogout_Click"
                    Style="{StaticResource MaterialDesignFlatButton}" />
        </StackPanel>

        <!-- Сетка карточек товаров -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ProductsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="16" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ProductDto}">
                        <materialDesign:Card Width="200" Margin="8" UniformCornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" />
                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextWrapping="Wrap" Margin="0,4,0,4"/>
                                <TextBlock Text="{Binding CategoryName}" FontSize="12" Foreground="#777" />
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" FontWeight="SemiBold" Margin="0,4,0,4"/>
                                <Button Content="Купить" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,8,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
