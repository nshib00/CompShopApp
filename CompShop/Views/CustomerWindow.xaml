<Window x:Class="ComputerShop.Views.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:BLL.DTO;assembly=BLL"
        xmlns:vm="clr-namespace:CompShop.ViewModels"
        xmlns:conv="clr-namespace:CompShop.Converters"
        Title="Главное меню пользователя"
        Height="800" Width="1160"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <conv:ImagePathConverter x:Key="ImagePathConverter"/>
    </Window.Resources>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 8">
            <TextBlock Text="CompShop" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,16,0" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0, 0, 16, 0">
                <TextBox Width="250" Margin="0,0,16,0"
                         materialDesign:HintAssist.Hint="Поиск по товарам"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Name="SearchTextBox"
                         Text="{Binding SearchText}"/>
                <ComboBox Width="200" 
                          materialDesign:HintAssist.Hint="Выберите категорию"
                          Name="CategoryComboBox"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
                          SelectedItem="{Binding SelectedCategory}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          ItemsSource="{Binding Categories}"/>
            </StackPanel>

            <Button Content="Выйти" Width="80"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    HorizontalAlignment="Right"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ProductsItemsControl" ItemsSource="{Binding Products}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Margin="16" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ProductDto}">
                        <materialDesign:Card Width="200" Height="300" Margin="8" UniformCornerRadius="8">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8">
                                <Grid Height="100" Width="150">
                                    <Image Source="{Binding ImagePath}"
                                       Stretch="UniformToFill"
                                       ImageFailed="Image_ImageFailed"/>
                                </Grid>

                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           Margin="0,8,0,0"/>

                                <TextBlock Text="{Binding Description}"
                                           FontSize="12"
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis"
                                           MaxHeight="40"
                                           TextAlignment="Center"/>

                                <TextBlock Text="{Binding CategoryName}"
                                           FontSize="12"
                                           Foreground="#777"
                                           TextAlignment="Center"/>

                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0} ₽'}"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,4"
                                           TextAlignment="Center"/>

                                <Button Content="Купить"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding DataContext.BuyProductCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Margin="0,8,0,0"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
